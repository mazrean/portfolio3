---
import About from '@components/ecosystem/About.astro'
import Layout from '../layouts/Layout.astro'
import Skill from '@components/ecosystem/Skill.astro'
import Interest from '@components/ecosystem/Interest.astro'
import Career from '@components/ecosystem/Career.astro'
---

<Layout title="" location="/">
  <main>
    <About />
    <Interest />
    <Skill />
    <Career />
  </main>
</Layout>

<style>
  main {
    margin: 0 auto;
    padding: 10px;
    width: 100%;
    max-width: 1200px;
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: center;
    gap: 1.25rem;
  }
</style>
