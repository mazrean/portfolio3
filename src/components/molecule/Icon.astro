---
interface Props {
  class?: string;
  size: string;
  name: string;
}

const { class: className, size, name, ...rest } = Astro.props;
---

<img
  class={className ? className : ""}
  src={`/public/icons/${name}.svg`}
  alt="{name} icon"
  {...rest}
/>

<style define:vars={{ size }}>
  img {
    width: var(--size);
    aspect-ratio: 1/1;
    object-fit: contain;
  }
</style>
