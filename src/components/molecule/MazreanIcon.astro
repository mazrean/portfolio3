---
interface Props {
  class?: string;
  size: string;
}

const { class: className, size, ...rest } = Astro.props;
---

<img
  class={className ? className : ""}
  src="/public/mazrean.svg"
  alt="Mazrean's Icon"
  {...rest}
/>

<style define:vars={{ size }}>
  img {
    width: var(--size);
    aspect-ratio: 1/1;
  }
</style>
