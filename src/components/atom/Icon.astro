---
interface Props {
  class?: string;
  size: string;
  src: string;
  alt: string;
}

const { class: className, size, src, alt, ...rest } = Astro.props;
---

<img class={className ? className : ""} src={src} alt={alt} {...rest} />

<style define:vars={{ size }}>
  img {
    width: var(--size);
    aspect-ratio: 1/1;
    object-fit: contain;
  }
</style>
