---
import NavbarItem from '@components/molecule/NavbarItem.astro'

interface Props {
  location: string
  items: {
    name: string
    href: string
  }[]
}

const { location, items } = Astro.props
---

<ul>
  {
    items.map(({ name, href }) => (
      <NavbarItem name={name} link={href} underline={location == href} />
    ))
  }
</ul>

<style>
  ul {
    display: flex;
    gap: 0.6rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
</style>
